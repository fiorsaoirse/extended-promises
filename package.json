{
  "name": "@fiorsaoirse/promises-external",
  "version": "0.0.1",
  "description": "The tiny library that contains the external API for working with promises",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test-leaks": "jest --detectOpenHandles",
    "build": "tsc",
    "lint": "npm run lint:src && npm run lint:ts",
    "lint:src": "node node_modules/eslint/bin/eslint \"src/**/*.{ts,tsx}\"",
    "lint:src:fix": "npm run lint:src -- --fix",
    "lint:ts": "tsc --noEmit",
    "lint:ts:w": "npm run lint:ts -- --watch",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fiorsaoirse/promises-external.git"
  },
  "keywords": [
    "promises",
    "external"
  ],
  "author": "Maria Kovsharova",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fiorsaoirse/promises-external/issues"
  },
  "homepage": "https://github.com/fiorsaoirse/promises-external#readme",
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "babel-jest": "^28.1.3",
    "eslint": "^8.21.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  }
}