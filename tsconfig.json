{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES2015"
    ],
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "src/index.d.ts"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "tests/**"
  ]
}